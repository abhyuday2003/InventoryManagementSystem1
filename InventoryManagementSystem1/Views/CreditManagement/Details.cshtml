@model IEnumerable<InventoryManagementSystem1.Models.CreditManagement>

<h2>Manage Credits</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Supplier</th>
            <th>Outstanding Balance</th>
            <th>Credit Limit</th>
            <th>Last Updated</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var credit in Model)
        {
            <tr>
                <td>@credit.Suppliers.SupplierName</td>
                <td>@credit.OutstandingBalance</td>
                <td>@credit.CreditLimit</td>
                <td>@credit.LastUpdated.ToString("g")</td>
                <td>
                    <form asp-action="Pay" method="post">
                        <input type="hidden" name="creditId" value="@credit.CreditId" />
                        <input type="number" name="paymentAmount" step="0.01" min="1" max="@credit.OutstandingBalance" placeholder="Enter Amount" required />
                        <button type="submit" class="btn btn-primary btn-sm">Pay</button>
                    </form>
                </td> 
            </tr>
        }
    </tbody>
</table>
