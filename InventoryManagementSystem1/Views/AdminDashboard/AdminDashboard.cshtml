@{
    Layout = null;
}
@{
    ViewData["Title"] = "Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .header {
            background-color: #2c3e50; /* Blue header */
            color: white;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1000;
        }

            .header button {
                background: none;
                border: none;
                color: white;
                font-size: 20px;
                cursor: pointer;
            }

        .sidebar {
            height: 100%;
            width: 250px;
            background-color: #2c3e50; /* Dark blue */
            color: white;
            position: fixed;
            top: 0;
            left: -250px; /* Hidden initially */
            transition: 0.3s; /* Smooth sliding effect */
            z-index: 999;
        }

            .sidebar ul {
                list-style: none;
                padding: 0;
                margin: 0;
                margin-top: 60px; /* To avoid overlapping with header */
            }

                .sidebar ul li {
                    padding: 15px 20px;
                    border-bottom: 1px solid #34495e;
                }

                    .sidebar ul li a {
                        color: white;
                        text-decoration: none;
                        font-size: 16px;
                    }

                        .sidebar ul li a:hover {
                            background-color: #1abc9c; /* Green hover */
                            border-radius: 5px;
                        }

        .main-content {
            margin-top: 60px; /* Prevent overlap with header */
            padding: 20px;
            transition: margin-left 0.3s; /* Smooth transition */
        }

        .sidebar-active {
            left: 0; /* Slide in the sidebar */
        }

        .content-shift {
            margin-left: 250px; /* Shift content to the right */
        }
    </style>
</head>
<body>

    <!-- Header -->
    <div class="header">
        <button id="toggleSidebar">&#9776; Menu</button> <!-- Hamburger Menu Button -->
        <h4>Admin Dashboard</h4>
    </div>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <ul>
            <li><a href="@Url.Action("Index", "Categories")">Manage Categories</a></li>
            <li><a href="@Url.Action("Index", "Products")">Manage Products</a></li>
            <li><a href="@Url.Action("Index", "Suppliers")">Manage Suppliers</a></li>
            <li><a href="@Url.Action("Index", "Orders")">Manage Orders</a></li>
            <li><a href="@Url.Action("Index", "Transactions")">Manage Transactions</a></li>
            <li><a href="@Url.Action("Details", "CreditManagement")">Manage Credits</a></li>
            <li><a href="@Url.Action("Settings", "AdminDashboard")">Settings</a></li>
            <li><a href="@Url.Action("Reports", "AdminDashboard")">View Reports</a></li>
            <li><a href="@Url.Action("Logout", "Account")">Logout</a></li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content" id="mainContent">
        <h4>Welcome to the Admin Dashboard</h4>
        <p>Select an option from the menu to manage the system.</p>
    </div>

    <!-- JavaScript for Sidebar Toggle -->
    <script>
        const toggleButton = document.getElementById('toggleSidebar');
        const sidebar = document.getElementById('sidebar');
        const mainContent = document.getElementById('mainContent');

        toggleButton.addEventListener('click', () => {
            sidebar.classList.toggle('sidebar-active'); // Add/remove the active class
            mainContent.classList.toggle('content-shift'); // Shift content to the right
        });
    </script>

</body>
</html>
